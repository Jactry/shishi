use strict;

my ($inerror);
my ($label, $txt);

while (<>) {
    if ($inerror) {
	$txt .= $1 if (m,"(.*)",);
	$inerror = 0 if m,break;,;
	if (!$inerror) {
	    print "\@item $label\n";
	    print $txt, "\n\n";
	}
    } else {
	next unless m,case (.*):,;
	next if $1 =~ m,[^_]+_OK,;
	$inerror = 1;
	$label = $1;
	$txt = "";
    }
}
